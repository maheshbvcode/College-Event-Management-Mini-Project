<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Area | Dashboard</title>
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
    <script src="http://cdn.ckeditor.com/4.6.1/standard/ckeditor.js"></script>
    <style>
      .hide-full-bar {
        display: none;
      }
    </style>
  </head>
  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" style= "margin-top:18px ;"  href="">College Event Management Project</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a style="font-size: large; margin-top:18px;">Organization: <%=userOrganizer%></a></li>
                <li><a style="font-size: large; margin-top:18px;">Username: <%=userName%></a></li>
                <li>              
                  <form action="logout" method= "POST">
                    <button type="submit" class="btn btn-sm btn-info add-btn-pad nav-btn" style= "margin-top:18px ; background-color: red;">Logout</button>
                  </form>
              </li>
              </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1> Logs<small></small></h1>
          </div>
          <div class="col-md-2">
              <form action="adminevents" method= "POST"><button type="submit" class="btn btn-sm btn-info add-btn-pad" style="margin-top: 18px;">Back</button></form>
          </div>
        </div>
      </div>
    </header>

    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <!-- Website Overview -->
            <div class="panel panel-default">
              <div class="panel-heading main-color-bg">
                <h3 class="panel-title">Overview</h3>
              </div>
              <div class="panel-body">
                <div class="col-md-12">
                  <div class="well dash-box">
                    <h2><%= length%></h2>
                    <h4>Logs</h4>
                  </div>
                </div>
              </div>
              </div>

              <!-- Latest Users -->
              <div class="panel panel-default">
                <div class="panel-heading col-md-12">
                  <div class="col-md-8">
                      <h3 class="panel-title">Events List</h3>
                  </div>
                  <div class="col-md-4">
                  </div>
                </div>
                <div class="panel-body">
                  <table class="table table-striped table-hover">
                      <thead>
                          <tr>
                              <th>Name</th>
                              <th>Action</th>
                              <th>Date</th>
                          </tr>
                      </thead>
                      <tbody>
                          <%if(length > 0) { %>
                          <% results.forEach((results, index) => { %>
                        <tr>
                            <% DOT = results.Ltime.toString() %>
                          <td><%= results.Lname[0].toUpperCase() + results.Lname.slice(1) %></td>
                          <td><%= results.Laction %></td>
                          <td><%= DOT.slice(0,24) %></td>
                          </td>
                        </tr>
                        <% }) %>
                        <%} else { %>
                            <td>No Events</td>
                        <%} %>
                    </tbody>
                    </table>
                </div>
              </div>
          </div>
        </div>
      </div>
    </section>


  <script>
     CKEDITOR.replace( 'editor1' );
 </script>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>
